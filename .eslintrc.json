{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "indent": [
      "error",
      4
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "off",
    "no-console": "off",
    "no-var": "error",
    "quotes": [
      "error",
      "single"
    ],
    "jest/expect-expect": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.spec.js"
      ],
      "rules": {
        "jest/prefer-expect-assertions": "off"
      }
    }
  ],
  "ignorePatterns": [
    "dist/",
    "*.json"
  ]
}